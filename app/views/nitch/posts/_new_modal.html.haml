#new-post-form.modal.hide.fade
  .modal-header
    %h3 New Post

  .modal-body
    = form_for Post.new, url: posts_url(archive_id: @archive.id) do |f|
      = render partial: 'nitch/posts/form', locals: { f: f }

  .modal-footer
    %button.btn(data-dismiss="modal") Cancel
    %button#new-post-submit.btn.btn-primary Save
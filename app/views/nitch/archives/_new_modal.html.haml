#new-archive-form.modal.fade.hide
  .modal-header
    %h3
      = "New #{current_nitch.settings.archive_name}"
  .modal-body
    = form_for Archive.new, url: archives_url do |f|
      = render partial: 'nitch/archives/form', locals: { f: f }
  .modal-footer
    %button.btn(data-dismiss="modal") Cancel
    %button#new-archive-submit.btn.btn-primary Save
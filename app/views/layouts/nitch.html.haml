!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    %title= content_for?(:title) ? yield(:title) : "Nitch"

    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    = stylesheet_link_tag "application", :media => "all"

    %link(href="/images/favicon.ico" rel="shortcut icon")
    %link(href="/images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="/images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="/images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    %iframe#nitch-bar{ src: nitch_bar_url(subdomain: 'www', nitch_name: current_nitch.name) }
    #nitch-container-outer
      .container
        #nitch-container
          .row
            .span10
              %h1.logo
                %span= current_nitch.title
          .row
            .span2.sidebar
              #nitch-sidebar-left
                %ul.nav.nav-list.well
                  %li{ class: class_if_path_matches('active', /\A#{nitch_path}\Z/) }
                    = link_to nitch_url do
                      %i.icon-home
                      Activity Feed
                  %li{ class: class_if_path_matches('active', /\A#{all_archives_path}\Z/) }
                    = link_to all_archives_url do
                      %i.icon-list
                      = current_nitch.settings.archive_name.pluralize
                  %li
                    = link_to '' do
                      %i.icon-user
                      Users
                  %li.divider
                  %li.nav-header
                    = current_nitch.settings.archive_name.pluralize
                  - current_user.archives.where(nitch_id: current_nitch.id).each do |archive|
                    %li{ class: class_if_path_matches('active', /\A#{archive_path(current_user.username, archive.slug)}/) }
                      = link_to archive.title, archive_url(current_user.username, archive.slug)
                  %li
                    / = link_to({}, {'data-target' => '#new-archive-form', 'data-toggle' => 'modal'}) do
                    = link_to new_archive_url do
                      %i.icon-plus
                      = "Add #{current_nitch.settings.archive_name}"
                  %li.divider
                  %li.nav-header
                    Following
                  %li.nav-header
                    Followers
            .span8
              #nitch-content
                = yield
            .span2.sidebar
              Nitch Sidebar
    %footer

    = javascript_include_tag "application"
